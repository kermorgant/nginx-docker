upstream redmine {
    server redmine:3000;
    server localhost:81 backup;
}


server {
    listen 80;
    server_name redmine.kgtech.local;

    location / {
        try_files $uri @redmine;
    }

    location @redmine {
        proxy_set_header  X-Forwarded-For $remote_addr;
        proxy_pass http://redmine;
    }
}
